pipeline {
    agent any

    stages {
        stage('Clone-Repo') {
            steps {
                script {
                    sh 'git clone https://github.com/AlexBaily/KitchenHelper-Android.git'
                }
            }
        }
        stage('Build') {
            steps {
                cleanWs()
                script {
                    dir('KitchenHelper-Android') {
                        sh 'pwd'
                        sh './gradlew check'
                    }

                }
            }
        }
        stage('UnitTest') {
            steps {
                script {
                    dir('KitchenHelper-Android') {
                        sh './gradlew clean test'
                    }
                }
            }
        }
        stage('Build-APK') {
            steps {
                script {
                    dir('KitchenHelper-Android') {
                        sh '/.gradlew assembleDebug assembleRelease'
                    }
                } 
            }
        }
    }
}
