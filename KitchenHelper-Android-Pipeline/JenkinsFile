pipeline {
    agent any

    environment {
        RELEASE_FILE = credentials('jenkins-apk-release-file')
        RELEASE_STORE_PASS = credentials('jenkins-apk-release-store-pass')
        RELEASE_ALIAS = credentials('jenkins-apk-release-alias')
        RELEASE_PASS = credentials('jenkins-apk-release-pass')
    }

    stages {
        stage('Clone-Repo') {
            steps {
                cleanWs()
                script {
                    sh 'git clone https://github.com/AlexBaily/KitchenHelper-Android.git'
                    sh 'git checkout apk_signing'
                    dir('KitchenHelper-Android') {
                        echo "sed -e s/${env.RELEASE_FILE}/{RELEASE_FILE} gradle.properties"
                        sh "sed -e s/${env.RELEASE_FILE}/{RELEASE_FILE} gradle.properties"
                        sh "sed -e s/${env.RELEASE_STORE_PASS}/{RELEASE_STORE_PASS} gradle.properties"
                        sh "sed -e s/${env.RELEASE_ALIAS}/{RELEASE_ALIAS} gradle.properties"
                        sh "sed -e s/${env.RELEASE_PASS}/{RELEASE_PASS} gradle.properties"
                    }
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    dir('KitchenHelper-Android') {
                        sh 'chmod +x gradlew'
                        sh 'pwd'
                        sh './gradlew check'
                    }

                }
            }
        }
        stage('UnitTest') {
            steps {
                script {
                    dir('KitchenHelper-Android') {
                        sh './gradlew clean test'
                    }
                }
            }
        }
        stage('Build-APK') {
            steps {
                script {
                    dir('KitchenHelper-Android') {
                        sh './gradlew assembleDebug assembleRelease'
                    }
                } 
            }
        }
        stage('Upload-APK') {
            steps {
                script {
                    dir ('KitchenHelper-Android/app/build/outputs/apk/release') {
                        sh 'aws s3 cp app-release.apk s3://kitchenhelper-android/release'
                    }
                }
            }
        }
    }
}
